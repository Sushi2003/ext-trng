{
  "manifest_version": 3,
  "name": "CRXJS React Vite Example",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "sidePanel",
    "scripting",
    "debugger",
    "tabs"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "js": ["src/content.js"],
      "matches": ["https://chatgpt.com/*"]
    }
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  }
}